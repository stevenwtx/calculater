<Page
    x:Class="App9.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App9"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="645">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton Icon="Add" Label="添加" Click="Add_Click"/>

        </CommandBar>
    </Page.BottomAppBar>


    <Grid Background="{ThemeResource SystemControlAcrylicWindowMediumHighBrush}" Margin="0,0,0,-15">
        <ListBox Name="listbox" Margin="10,55,10,35" Background="{StaticResource SystemControlAcrylicWindowMediumHighBrush}" SelectionChanged="listbox_SelectionChanged">

        </ListBox>
        <TextBox Name="textbox" Margin="10,10,10,0" Text="" Height="40" VerticalAlignment="Top" TextAlignment="Left" FontSize="18" KeyUp="Textbox_KeyDown"/>

    </Grid>
</Page>
